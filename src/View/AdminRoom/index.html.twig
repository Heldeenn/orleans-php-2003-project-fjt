{% extends 'layout.html.twig' %}
{% block navbar %}
    {% include '/Home/navbar.html.twig' %}
{% endblock %}
{% block content %}
    <section>
        <div class="adminroom-index">
            <h2 class="m-5">Gestion des logements</h2>
            <div class="d-flex justify-content-around ">
                <form action="" method="post">
                    <button class="btn btn-outline-primary btn-lg">Ajouter un logment</button>
                </form>
                <form action="" method="post">
                    <button class="btn btn-outline-primary btn-lg">Ajouter une adresse</button>
                </form>
            </div>

            {% for address in addresses %}
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col"colspan="3">{{ address.name }}</th>
                </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                    {% if address.id == room.address_id  %}
                        <tr>
                            <td>{{ room.type }}</td>
                            <td><form action="" method="post">
                                    <input type="hidden" value="{{ room.id }}" name="id">
                                    <button class="btn btn-outline-primary">Mettre Ã  jour</button>
                                </form>
                            </td>
                            <td><form action="" method="post">
                                    <input type="hidden" value="{{ room.id }}" name="id">
                                    <button class="btn btn-outline-primary">Supprimer ce logement</button>
                                </form>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
                {% endfor %}
            </table>
        </div>
    </section>

{% endblock %}
{% block footer %}
