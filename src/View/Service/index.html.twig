{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container-fluid container-service">
        <h2 class="service-title">Nos services</h2>
        <div class="row justify-content-center">
            {% for service in services %}
            <div class="col-md-6 col-xs-1 card-deck">
                <div class="card service-card">
                    <img src="/assets/images/{{ service.image }}" class="card-img-top" alt="{{ service.name }}">
                    <div class="card-body card-description">
                        <h3 class="card-title">{{ service.name }}</h3>
                        <p class="card-text">{{ service.description }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="container-fluid container-animation">
        <h2 class="animation-title">Nos animations</h2>
        <div class="animation-flex">
    {% set firstAnimation = true %}
    {% for animation in animations %}
        {% if firstAnimation == true %}
        <div class="row no-gutters justify-content-center col-lg-6 flex-card">
                <div class="card-deck main-card">
                    <div class="card">
                        <img src="/assets/images/{{ animation.image }}" class="card-img-top" alt="{{ animation.name }}">
                        <div class="card-body card-description">
                            <h3 class="card-title">{{ animation.name }}</h3>
                            <p class="card-text">{{ animation.description }}</p>
                        </div>
                    </div>
                </div>
        </div>
            {% set firstAnimation = false %}
            <div class="d-flex flex-column">
            {% else %}
                <div class="card animation-card">
                    <div class="row no-gutters">
                        <div class="col-md-6 col-xs-1">
                            <img src="/assets/images/{{ animation.image }}" class="card-img-top h-100" alt="{{ animation.name }}">
                        </div>
                        <div class="col-md-6 col-xs-1">
                            <div class="card-body card-description">
                                <h3 class="card-title">{{ animation.name }}</h3>
                                <p class="card-text">{{ animation.description }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
