{% extends 'adminLayout.html.twig' %}
{% block title %}Gestion des pré-admissions{% endblock %}

{% block content %}
    <section>
        <h1 class="m-lg-4 text-center">Gestion des pré-admissions</h1>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col" colspan="2">Dossiers en attente</th>
            </tr>
            </thead>
            <tbody>
            {% for folder in folders %}
                {%  if folder.status is same as('En attente') %}
                    <tr>
                        <td>{{ folder.lastname ~ ' ' ~ folder.firstname}}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="/AdminAdmission/show/{{ folder.id }}" >Consulter</a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td scope="col" colspan="3"><a class="btn btn-outline-primary" href="/AdminAdmission/allWaiting">Toutes les demandes en attente</a></td>
            </tr>
            </tfoot>
        </table>


        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col" colspan="2">Dossiers validés</th>
            </tr>
            </thead>
            <tbody>
            {% for folder in folders %}
                {%  if folder.status is same as('Validé') %}
                    <tr>
                        <td>{{ folder.lastname ~ ' ' ~ folder.firstname}}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="/AdminAdmission/show/{{ folder.id }}" >Consulter</a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td scope="col" colspan="3"><a class="btn btn-outline-primary" href="/AdminAdmission/allValidate">Toutes les demandes validées</a></td>
            </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <a role="button" class="btn btn-outline-primary btn-lg col-md-3 col-8 my-3 my-md-0" href="/Admin/index">Retour</a>
        </div>

    </section>
{% endblock %}
