<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group m-4">
        <input type="hidden" value="{{ animation.id }}" name="id">
        <label for="name">Nom de l'animation</label>
        <input class="form-control" type="text" name="name" id="name" value="{{ animation.name }}">
        {% if errors.name %}
            <div class="text-danger">{{ errors.name }}</div>
        {% endif %}
        <label for="description" class="mt-3">Description</label>
        <textarea class="form-control" name="description" id="description">{{ animation.description }}</textarea>
        {% if errors.description %}
            <div class="text-danger">{{ errors.description }}</div>
        {% endif %}
        <label for="image" class="mt-3">Choisir une image</label>
        <input type="hidden" name="MAX-FILE-SIZE" value="1000000">
        <input class="form-control-file" type="file" name="image" id="image">
        {% if errors.image %}
            <div class="text-danger">{{ errors.image }}</div>
        {% endif %}
        <input class="btn btn-outline-primary mt-3" type="submit" value="Valider">
    </div>
</form>
