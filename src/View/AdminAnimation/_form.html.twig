<form class="d-flex row col-md-10 mx-auto flex-column align-items-center border border-primary rounded p-4" method="post" enctype="multipart/form-data">
    <div class="form-group col-lg-5 my-3">
        <input type="hidden" value="{{ animation.id }}" name="id">
        <label for="name">Nom de l'animation</label>
        <input class="form-control" type="text" name="name" id="name" value="{% if data %}{{ data.name }}{% else %}{{ animation.name }}{% endif %}">
        {% if errors.name %}
            <div class="text-danger">{{ errors.name }}</div>
        {% endif %}
    </div>
    <div class="form-group col-lg-5 my-3">
        <label for="description" class="mt-3">Description</label>
        <textarea class="form-control" name="description" id="description">{% if data %}{{ data.description }}{% else %}{{ animation.description }}{% endif %}</textarea>
        {% if errors.description %}
            <div class="text-danger">{{ errors.description }}</div>
        {% endif %}
    </div>
    <div class="form-group col-lg-5 my-3">
        <label for="image" class="mt-3">Choisir une image</label>
        <input type="hidden" name="MAX-FILE-SIZE" value="1000000">
        <input class="form-control-file" type="file" name="image" id="image">
        {% if errors.image %}
            <div class="text-danger">{{ errors.image }}</div>
        {% endif %}
    </div>
        <div class="mx-auto col-lg-10 d-flex justify-content-between my-4">
            <input class="btn btn-outline-primary col-4" type="submit" value="Valider">
            <a class="btn btn-outline-primary col-4" role="button" href="/AdminAnimation/index">Retour</a>
        </div>
</form>
