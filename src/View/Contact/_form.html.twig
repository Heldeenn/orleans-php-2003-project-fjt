{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/form.css">
{% endblock %}

<section class="container" id="contact">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-md-5">
            <h2 class="text-center text-md-left">Nous contacter</h2>

            <div class="d-flex flex-column text-center text-md-left">
                <p class="text-left">Vous pouvez nous envoyer un message afin d'avoir des précisions ou des informations supplémentaires en remplissant ce formulaire.</p>
                <p class="text-left">Vous pouvez également nous joindre par téléphone au 02.38.42.23.30</p>
            </div>
        </div>

        <div class="mt-5 col-sm-12 col-md-5 offset-md-1">
            <form method="POST">
                <div class="form-row">
                    <div class="form-group col-md-5 mr-md-4">
                        <label for="lastname">Nom*</label>
                        <input required type="text" class="form-control" id="lastname" name="lastname" placeholder="Alderson" value="{{ post.lastname }}">
                        <div>
                            {% if errors.lastname %}
                                <div class="alert alert-danger mt-1" role="alert">{{ errors.lastname }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group col-md-5 offset-md-1 pr-md-0">
                        <label for="firstname">Prénom*</label>
                        <input required type="text" class="form-control" id="firstname" name="firstname" placeholder="Elliot" value="{{ post.firstname }}">
                        <div>
                            {% if errors.firstname %}
                                <div class="alert alert-danger mt-1" role="alert">{{ errors.firstname }}</div>
                            {% endif %}
                        </div>
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col-md-5 mr-md-4">
                        <label for="phone">Téléphone</label>
                        <input type="tel" class="form-control" id="phone" name="phone" placeholder="0601020304" value="{{ post.phone }}">
                    </div>


                    <div class="form-group col-md-5 offset-md-1 pr-md-0">
                        <label for="email">Adresse mail</label>
                        <input   type="email" class="form-control" id="email" name="email" placeholder="alderson.elliot@gmail.com" value="{{ post.email }}">
                        <div>
                            {% if errors.email %}
                                <div class="alert alert-danger mt-1" role="alert">{{ errors.email }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="form-group col-13 pl-0">
                    <label for="message">Message*</label>
                    <textarea required class="form-control" id="message" name="message" rows="4" placeholder="Je souhaiterai vous contacter à propos de...">{{ post.message }}</textarea>
                    <div>
                        {% if errors.message %}
                            <div class="alert alert-danger mt-1" role="alert">{{ errors.message }}</div>
                        {% endif %}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <div class="alert-light" role="alert">
                    <p>Les champs marqués d'un * sont obligatoires</p>
                </div>
            </form>
            {% if success.success %}
                <div class="alert alert-success mt-1" role="alert">{{ success.success }}</div>
            {% endif %}
        </div>
    </div>
</section>
